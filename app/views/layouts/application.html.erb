<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
	<%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") { render @cart } %>
			<% end %>
			<a href="http://localhost:3000/">Home</a><br />
			<a href="http://localhost:3000/faq">Questions</a><br />
			<a href="http://localhost:3000/news">News</a><br />
			<a href="http://localhost:3000/contact">Contact</a><br />
			<hr>
			<p><%= @current_time %></p>
			<p><%= 'Viewed ' + @display_count.to_s + ' times' if @display_count %></p>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
